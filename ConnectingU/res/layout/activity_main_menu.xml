<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33B5E5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.connectingu.MainMenu" >

    <Button
        android:id="@+id/buyButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/sellButton"
        android:layout_alignLeft="@+id/sellButton"
        android:layout_marginBottom="37dp"
        android:background="@null"
        android:fontFamily="assets/Fonts/Roboto-Thin.ttf"
        android:onClick="goToBuy"
        android:text="Buy Textbooks"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sellButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/goToUserPref"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@null"
        android:fontFamily="assets/Fonts/Roboto-Thin.ttf"
        android:onClick="goToSell"
        android:text="Sell Textbooks"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/goToUserPref"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/sellButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:background="@null"
        android:enabled="false"
        android:fontFamily="assets/Fonts/Roboto-Thin.ttf"
        android:onClick="goToUserPref"
        android:text="User Prefrences"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:fontFamily="assets/Fonts/Roboto-BoldItalic.ttf"
        android:text="ConnectingU"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

</RelativeLayout>